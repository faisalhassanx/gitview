<%= form_for @developer do |f| %>
  

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", 
        placeholder: "Please enter your name" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", 
        placeholder: "Please enter a valid email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control", 
        placeholder: "Please enter a password" %>
  </div>
  
  <% unless controller_name == "developers" && action_name == "new" %>
  
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :website %>
          <%= f.text_field :website, class: "form-control", 
              placeholder: "Please enter your personal URL" %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :github %>
          <%= f.text_field :github, class: "form-control", 
              placeholder: "Please enter your Github URL" %>
        </div>
      </div>
    </div>
    
  <% end %>

  <div class="form-group"> 
    <%= f.submit ( f.object.new_record? ? "Register" : "Update Account"), class: "btn btn-success" %>
  </div>
<% end %>