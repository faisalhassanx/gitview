<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1 class="text-center"><%= @developer.name.titleize %></h1>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
        <%= gravatar_for @developer, size: 250 %>
        <h5>
          <%= link_to "Edit", edit_developer_path(@developer), class: "btn btn-primary edit-btn" %>
          <%= link_to "Delete", developer_path(@developer), method: :delete, 
                              data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </h5>
        <br />
      </div>
    </div>
  </div>
    
  <% @projects.each do |project| %>
  <div class="col-md-8 col-md-offset-2 well">
    <div class="row">
      <div class="col-md-6 col-md-offset-1">
        <h2><%= link_to project.name.titleize, project %></h2>
        <h4><strong><%= project.tagline %></strong></h4>
        <br />
      </div>
      <div class="col-md-5">
       
      </div>
    </div>
  </div>
  <% end %>
</div>
