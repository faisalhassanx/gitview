<div class="row">
  <div class="col-md-2">
    <section class="developer-info center">
      <%= gravatar_for(comment.developer, size: 60) %>
    </section>
  </div>
  <div class="col-md-10">
    <p><%= comment.description %></p>
    <p>
      <span class="quiet">
        <small>Created: <%= time_ago_in_words(comment.created_at) %> ago by
                            <%= comment.developer.name %></small>
      </span>
    </p>
  </div>
</div>
<hr />